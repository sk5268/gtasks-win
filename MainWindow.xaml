<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Google_Tasks_Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Google_Tasks_Client"
    xmlns:models="using:Google_Tasks_Client.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Google_Tasks_Client.ViewModels"
    mc:Ignorable="d"
    Title="Google Tasks Client">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar: Task Lists -->
        <Grid Grid.Column="0" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Task Lists" Style="{StaticResource TitleTextBlockStyle}" Margin="16,24,16,12"/>
            
            <ListView x:Name="TaskListsView" 
                      ItemsSource="{x:Bind ViewModel.TaskLists, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedTaskList, Mode=TwoWay}"
                      Grid.Row="1"
                      SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:TaskListItem">
                        <TextBlock Text="{x:Bind Title}" Margin="0,8"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Main Content: Tasks -->
        <Grid Grid.Column="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="{Binding ViewModel.SelectedTaskList.Title}" 
                           Style="{StaticResource TitleTextBlockStyle}" 
                           VerticalAlignment="Center"/>
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                              Visibility="{x:Bind ViewModel.IsLoadingVisibility, Mode=OneWay}"
                              Margin="12,0,0,0"/>
            </StackPanel>

            <ListView x:Name="TasksView" 
                      ItemsSource="{x:Bind ViewModel.Tasks, Mode=OneWay}"
                      Grid.Row="1"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:TaskItem">
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <CheckBox IsChecked="{x:Bind IsCompleted, Mode=OneWay}" Margin="0,0,12,0" VerticalAlignment="Top"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{x:Bind Title}" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{x:Bind Notes}" Style="{StaticResource CaptionTextBlockStyle}" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind Due}" Style="{StaticResource CaptionTextBlockStyle}" 
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>